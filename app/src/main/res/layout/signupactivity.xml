<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signupscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#E1E7F6"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/sb"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="116dp"
                android:layout_height="52dp"
                android:layout_marginStart="142dp"
                android:layout_marginTop="20dp"
                android:textSize="29sp"
                android:textColor="@color/white"
                android:text="Sign up"
                android:fontFamily="@font/josefinsansregular"
                android:gravity="top" />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="232dp"
                android:fontFamily="@font/josefinsansregular"
                android:text="Email"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/emailcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="260dp"
                app:cardElevation="18dp"
                app:cardCornerRadius="8dp"
                android:padding="10dp"
                android:background="@android:color/transparent">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_edit_text"
                    android:fontFamily="@font/josefinsansregular"
                    android:hint="@string/emailhint"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="#59000000" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usernametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/josefinsansregular"
                android:layout_marginTop="322dp"
                android:gravity="top"
                android:text="Username"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/usernamecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernametext"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                tools:ignore="MissingClass">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:id="@+id/username"
                    android:fontFamily="@font/josefinsansregular"
                    android:hint="John Doe"
                    android:paddingBottom="5dp"
                    android:textColorHint="#59000000"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:inputType="text"
                    tools:ignore="LabelFor" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/phonenumbertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:fontFamily="@font/josefinsansregular"
                android:layout_marginTop="408dp"
                android:gravity="top"
                android:text="Phonenumber"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/phonenumbercard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonenumbertext"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="58dp"
                app:cardCornerRadius="8dp"
                android:padding="10dp"
                android:background="@android:color/transparent">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:id="@+id/phonenumber"
                    android:fontFamily="@font/josefinsansregular"
                    android:hint="0712345678"
                    android:paddingBottom="5dp"
                    android:textColorHint="#59000000"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:inputType="text"
                    tools:ignore="LabelFor,TextFields" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/passworrdtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/josefinsansregular"
                android:layout_marginStart="32dp"
                android:layout_marginTop="492dp"
                android:gravity="top"
                android:text="Password"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/passwordcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonenumbercard"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                app:cardElevation="18dp"
                app:cardCornerRadius="8dp"
                android:padding="10dp"
                android:background="@android:color/transparent">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:id="@+id/password"
                    android:fontFamily="@font/josefinsansregular"
                    android:hint="********"
                    android:textColorHint="#59000000"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:inputType="textPassword"
                    tools:ignore="LabelFor,TextFields" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/confirmpasswordtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/josefinsansregular"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="578dp"
                android:gravity="top"
                android:text="@string/confirm_password"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/confirmpasswordcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmpasswordtext"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="18dp"
                app:cardCornerRadius="8dp"
                android:padding="10dp"
                android:background="@android:color/transparent">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:id="@+id/confirmpassword"
                    android:fontFamily="@font/josefinsansregular"
                    android:hint="********"
                    android:textColorHint="#59000000"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:inputType="textPassword"
                    tools:ignore="DuplicateIds,HardcodedText,LabelFor,RtlSymmetry,TextFields" />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/signupbutton"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/confirmpasswordcard"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:fontFamily="@font/josefinsansregular"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/dont_have_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:layout_marginTop="770dp"
                android:paddingBottom="40dp"
                android:text="Already have an account?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/signuplink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="268dp"
                android:layout_marginTop="770dp"
                android:paddingBottom="40dp"
                android:text="Sign in"
                android:textColor="#8660CA"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
